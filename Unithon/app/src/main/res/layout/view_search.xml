<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="138dp"
    android:layout_height="203dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="138dp"
        android:layout_height="203dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_Book"
            android:layout_width="71dp"
            android:layout_height="119dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            tools:src="@color/colorPrimary" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/search_Bookname"
            android:gravity="center_vertical"
            android:layout_width="85dp"
            android:layout_height="19dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/warmGray"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/iv_book"
            app:layout_constraintTop_toBottomOf="@+id/search_Book"
            tools:text="Bookname" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/search_writer"
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/warmGray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintRight_toRightOf="@+id/iv_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_Bookname"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Writer" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>