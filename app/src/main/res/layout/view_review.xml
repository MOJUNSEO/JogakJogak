<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="24dp"
  android:layout_marginLeft="24dp"
  android:layout_marginRight="24dp"
  android:minHeight="120dp"
  app:cardCornerRadius="5dp">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="20dp">

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_id"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/warmGray"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="id 쓰는 칸" />

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/iv_like"
      android:layout_width="28dp"
      android:layout_height="28dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@android:drawable/ic_menu_help" />

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:textColor="@color/warmGray"
      android:textSize="12sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/iv_like"
      app:layout_constraintTop_toBottomOf="@+id/tv_id"
      tools:text="asdasdjashskdjah asjsdhakjd asdahkjsd sahkjsd hajksd ajkhd kjahdsjkahs kjhajkdhjak hsjkda hjksdhasjkdh kajsshdjka hdjkash jkdsahdkj aksjdajk dsajksh jkajkasdjk a hdjkash jkdsahdkj aksjdajk dsajksh jkajkasdjk a" />

  </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>